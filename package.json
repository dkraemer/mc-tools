{
  "name": "@dkraemer/mc-tools",
  "version": "0.1.1-alpha.1",
  "description": "A collection of tools for Minecraft modpack authors",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "mc-curse-export": "./bin/curse-export"
  },
  "scripts": {
    "clean": "git clean -dXf --exclude=\"!node_modules/\"",
    "build": "tsc -p .",
    "lint": "yarn eslint .",
    "pre-commit": "yarn lint && yarn clean && yarn build",
    "mc-curse-export": "yarn build && node ./bin/curse-export"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": ""
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dkraemer/mc-tools.git"
  },
  "keywords": [
    "Minecraft",
    "Modpack",
    "CurseForge"
  ],
  "author": "Daniel Kraemer <dkraemer@dkross.org>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/dkraemer/mc-tools/issues"
  },
  "homepage": "https://github.com/dkraemer/mc-tools#readme",
  "dependencies": {
    "archiver": "^5.2.0",
    "commander": "^7.0.0",
    "fs-extra": "^9.1.0"
  },
  "devDependencies": {
    "@types/archiver": "^5.1.0",
    "@types/fs-extra": "^9.0.6",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "typescript": "^4.1.3"
  }
}
